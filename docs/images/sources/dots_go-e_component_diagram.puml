@startuml
skinparam defaultTextAlignment center
'skinparam backgroundColor #EEEBDC
skinparam backgroundColor white
'skinparam arrowFontName Courier
'skinparam legendFontName Courier
'skinparam actorFontName Courier
'skinparam cloudFontName Courier
'skinparam componentFontName Courier
'skinparam handwritten true
skinparam actorBackgroundColor Gold

cloud "Azure Kubernetes Service\n<img:../static/aks.png{scale=0.05}>" as aks {
    [<img:../static/fastapi_logo.png{scale=0.32}>\nSimulation\nOrchestrator] as so
    node "<img:../static/python.png{scale=0.02}>\nCalculation models:\n<img:../static/arrow_double.png{scale=0.25}> model IO data" as models
    [<img:../static/grafana.png{scale=0.05}>\nDashboard] as grafana

    models <-r- so: deploy models\ninformation
    models <-r-> so: lifecycle\ncommands

    database "<img:../static/influxdb_crop.png{scale=0.21}>" {
        [Simulation results] as influxdb
    }
    models ..> influxdb: write to\ndatabase
    influxdb ..> grafana: database\nquery
}

actor "service\ndeveloper" as developer
actor "simulator\nuser" as simulator

node "<img:../static/github.png{scale=0.08}>\nCalculation\nService Repos" as repos

so .> repos: pull image

developer <.> repos: implement\nlogic
'simulator <. simulator: <img:../static/lens-logo-icon.png{scale=0.1}>\n view logs
[<img:../static/lens-logo-icon.png{scale=0.08}>\nLens] as lens
simulator <. lens: container\nlogs
'lens . aks

simulator .> so: HTTP: Start simulation <img:../static/esdl_logo_large.png{scale=0.1}>
simulator <. grafana: HTTP: \nvisualize data

legend right
    <img:../static/arrow.png{scale=0.02}>
    Cluster internal communication helics:
    <img:../static/helics-logo.png{scale=0.02}>
endlegend

@enduml
